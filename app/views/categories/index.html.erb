<div class="container">
<section>
  <div class="row">
    <h1><%= t "category.all" %></h1>
    <table class="table table-striped">
      <tr>
        <th>#</th>
        <th><%= t "category.name" %></th>
        <th><%= t "category.description" %></th>
        <th><%= t "category.start" %></th>
      </tr>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><b><%= category.name %></b></td>
          <td><%= category.description %></td>
          <td><%= link_to t("category.start"), category_lessons_path(category) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</section>
