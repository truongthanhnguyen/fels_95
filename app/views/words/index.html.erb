<%= form_tag words_path, method: "get" do %>
  <%= select_tag :category, options_from_collection_for_select(@categories, :id, :name, @category) %>
  <% @word_statuses.each_with_index do |item, index| %>
    <%= radio_button_tag :status, index, @status.to_i == index %>
    <%= label_tag item %>
  <% end %>
  </br>
  <div class="padding-right-60">
    <%= button_tag type: "submit", class: "btn btn-default btn-primary" do %>
      <%= t "word.filter" %>
    <% end %>
    </br>
  </div>
  <%= render @words %>
  <%= will_paginate %>
<% end %>
